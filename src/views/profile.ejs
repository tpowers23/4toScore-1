<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>home</title>

        <!-- font awesome cdn link  -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

        <!-- custom css file link  -->
        <link rel="stylesheet" href="/css/profile.css">
    </head>
    <body>
        <!-- jquery cdn link  -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <!-- custom js file link  -->
        <script src="js/script.js"></script>

        <!-- header section starts  -->
        <header>
            <h1 class="heading">Stats</h1>
            <div id="menu" class="fas fa-bars"></div>
            <nav class="navbar">
                <ul>
                    <li><a href='/'>Home</a></li>
                    <div class="dropdown">
                        <button class="dropbtn">Play
                            <i class = "fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-content">
                            <a href="unranked">Unranked Match</a>
                            <a href="">Ranked Match</a>
                            <a href="">Play with Friends</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn">Learn More
                            <i class = "fa fa-caret-down"></i>
                        </button>
                        <div  class="dropdown-content">
                            <a href="howtoplay">How To Play</a>
                            <a href="eloranking">ELO Ranking System</a>
                        </div>
                    </div>
                    <li><a href='aboutus'>About Us</a></li>
                    <div class="dropdown">
                        <button class="dropbtn"> <%= user.username %>
                            <i class = "fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-content">
                            <a href="profile">Stats</a>
                            <a href="friends">Friends</a>
                            <form method="POST" action="/logout">
                                <button type="submit" class="btn btn-primary">Log out</button>
                            </form>
                        </div>
                    </div>
                </ul>
            </nav>
        </header>
        <!-- header section ends-->

        <!-- home section starts -->
        <section class="home">
            <div class="content2">
                <br><br><br>
                <h1><%= user.username %></h1>
                <br>
                <br>
                <h1 style="text-decoration: underline">Career Stats</h1>
                <br>
                <br>
                <table>
                    <tr>
                        <th>Division</th>
                        <th>Rank Points</th>
                        <th>Games Played</th>
                        <th>Wins</th>
                        <th>Losses</th>
                    </tr>
                    <tr>
                        <td><%= user.user_division %></td>
                        <td><%= user.user_rankpoints %></td>
                        <td><%= user.user_gamesplayed %></td>
                        <td><%= user.user_wins %></td>
                        <td><%= user.user_losses %></td>
                    </tr>
                </table>
                </div>
                <br>
                <br>
            </div>
        </section>
    </body>
</html>
