<!DOCTYPE html>
<html>

<head>

    <title> 4toScore Register Screen </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/register.css">
    <script src="/js/register.js"></script>

</head>
<script type="text/javascript">

    function CheckSpace(event) {
        if (event.which == 32) {
            event.preventDefault();
            return false;
        }
    }
</script>

<body>
    <div class="register-page">
        <div class="form">
            <div class="register">
                <div class="register-header">
                    <h3>Sign-Up</h3>
                </div>
            </div>
            <form>
                <fieldset>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="First Name" id="fname"
                            onkeypress="CheckSpace(event)" required />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Last Name" id="lname"
                            onkeypress="CheckSpace(event)" required />
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email" id="email"
                            onkeypress="CheckSpace(event)" required />
                        <small class="form-text invalid-feedback">Invalid email</small>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username" id="username"
                            onkeypress="CheckSpace(event)" required />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" id="password"
                            onkeypress="CheckSpace(event)" required />
                        <small class="form-text invalid-feedback">Password needs to be at least 8 characters, have an
                            uppercase letter,
                            & include a special symbol like @, !, ?</small>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Confirm Password"
                            id="passwordConfirmation" onkeypress="CheckSpace(event)" required />
                        <small class="form-text invalid-feedback">Password confirmation is not match with the
                            password input</small>
                    </div>
                    <button type="submit" id="registerBtn" class="btn btn-primary">Register</button>
                    <p class="message">Have an Account?<a href="login">Log In Here</a></p>
                </fieldset>
            </form>
        </div>
    </div>
</body>

</html>